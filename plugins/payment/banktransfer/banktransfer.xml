<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.6" type="plugin" group="payment" method="upgrade">
	<name>Payment - Banktransfer</name>
	<author>compojoom</author>
	<creationDate>02 July 2013</creationDate>
	<copyright>Compojoom. All Rights Reserved.</copyright>
	<authorEmail>contact-us@compojoom.com</authorEmail>
	<authorUrl>http://compojoom.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1</version>
	<description>Pay by banktransfer plugin from compojoom. </description>
	<files>
		<filename plugin="banktransfer">banktransfer.php</filename>
		<folder>banktransfer</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_banktransfer.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_banktransfer.ini</language>
	</languages> 
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="Banktransfer" label="PLG_NAME" description="" />
                    <!--
                    taking the bank data out of the backend..
                    <field name="bank_info" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
                    -->
			</fieldset>
		</fields>
	</config>
</extension>
