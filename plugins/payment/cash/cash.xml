<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.6" type="plugin" group="payment" method="upgrade">
	<name>Payment - Cash</name>
	<author>Compojoom</author>
	<creationDate>28th July 2013</creationDate>
	<copyright>Compojoom.com All Rights Reserved.</copyright>
	<authorEmail>extensions@compjoom.com</authorEmail>
	<authorUrl>http://www.compjooom.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1</version>
	<description>PayBy cash plugin for the Joomla Payment API. </description>
	<files>
		<filename plugin="cash">cash.php</filename>
		<folder>cash</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_cash.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_cash.ini</language>
	</languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="Cash" label="PLG_NAME" description="" />
					<field name="plugin_text" type="text" default="Please pay the fee at the beginning of the event" label="PLG_TEXT" description="" />
			</fieldset>
		</fields>
	</config>
</extension>
