<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.6" type="plugin" group="payment" method="upgrade">
	<name>Payment - Direct Debit</name>
	<author>compojoom</author>
	<creationDate>25 January 2014</creationDate>
	<copyright>Compojoom. All Rights Reserved.</copyright>
	<authorEmail>contact-us@compojoom.com</authorEmail>
	<authorUrl>http://compojoom.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.1</version>
	<description>Direct debit plugin from compojoom. </description>
	<files>
		<filename plugin="debit">debit.php</filename>
		<folder>debit</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_debit.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_debit.ini</language>
	</languages> 
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="Direct debit" label="PLG_NAME" description="" />
                    <field name="link_file" type="text" default="" label="PLG_DEBIT_LINK_TO_FILE" description="PLG_DEBIT_LINK_TO_FILE_DESC" />
                <!--
                taking the bank data out of the backend..
                <field name="bank_info" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
                -->
			</fieldset>
		</fields>
	</config>
</extension>
